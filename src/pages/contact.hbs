<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      *{ font-family: "Poppins" ,sans-serif; } a { text-decoration: none; }
    </style>
  </head>
  <body class="bg-dark-subtle">
    <!--  ============ Start Nav -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img
            style="width: 40px"
            src="https://i.imgur.com/y0cqB7Z.png"
            alt="logo"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link" href="/project">Add Project</a>
              </li>
            {{/if}}
          </ul>

          <div class="d-flex align-items-center gap-3">
            <div class="d-flex gap-3 align-items-center">
              {{#if user}}
                <div class="d-flex gap-1 align-items-center">
                  <i class="fa-solid fa-user"></i>
                  <text class="text-black fw-semibold">{{user}}</text>
                </div>
              {{else}}
                <a class="text-black" href="/register">Register</a>
              {{/if}}
              {{#if user}}
                <a class="text-black" href="/login">Logout</a>
              {{else}}
                <a class="text-black" href="/login">Login</a>
              {{/if}}
            </div>
            <a class="btn btn-danger" href="/contact">Contact me</a>
          </div>
        </div>
      </div>
    </nav>
    <!-- =================== end Nav -->

    <div class="container my-5">
      <h3 class="text-center">GET IN TOUCH</h3>
      <form class="w-50 mx-auto" method="post" action="contact">
        <div>
          <label for="input-name">Name</label>
          <input name="name" class="form-control" type="text" id="input-name" />
        </div>
        <div class="mt-1">
          <label for="input-email">Email</label>
          <input
            name="email"
            class="form-control"
            required
            type="email"
            id="input-email"
          />
        </div>
        <div class="mt-1">
          <label for="input-phone">Phone Number</label>
          <input
            name="phone"
            class="form-control"
            type="number"
            id="input-phone"
          />
        </div>
        <div class="mt-1">
          <label for="input-subject">Subject</label>
          <select
            name="subject"
            class="form-select form-select-md mb-3"
            id="input-subject"
          >
            <option value="" hidden></option>
            <option>Frontend Web</option>
            <option>Backend</option>
            <option>FullStack</option>
          </select>
        </div>
        <div>
          <label for="input-message">Your Messeage</label>
          <textarea
            name="message"
            class="form-control"
            style="resize: none;height: 200px;"
            id="input-message"
            cols
          ></textarea>
        </div>
        <div class="mt-3 d-flex justify-content-end">
          <button class="btn btn-danger px-4" type="submit">Submit</button>
        </div>
      </form>
    </div>

    <!-- jS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    ></script>

    <script src="src/assets/js/contact.js"></script>
  </body>
</html>