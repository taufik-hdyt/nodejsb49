<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      * { font-family: "Poppins", sans-serif; } a { text-decoration: none; }
    </style>
  </head>
  <body>
    <!--  ============ Start Nav -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class=" container-sm container-md container-lg">
        <a class="navbar-brand " href="/">
          <img
            style="width: 40px"
            src="https://i.imgur.com/y0cqB7Z.png"
            alt="logo"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link fw-bolder active"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link" href="/project">Add Project</a>
              </li>
            {{/if}}
          </ul>

          <div class="d-flex align-items-center gap-5">
            <div class="d-flex gap-4 align-items-center">
              {{#if isLogin}}
                <div class="d-flex gap-1 align-items-center">
                  <i class="fa-solid fa-user"></i>
                  <text class="text-black fw-semibold">{{user}}</text>
                </div>
              {{else}}
                <a class="text-black" href="/register">Register</a>
              {{/if}}
              {{#if isLogin}}
                <a class="text-black" href="/logout">Logout</a>
              {{else}}
                <a class="text-black" href="/login">Login</a>
              {{/if}}
            </div>
            <a class="btn btn-danger" href="/contact">Contact me</a>
          </div>
        </div>
      </div>
    </nav>
    <!-- =================== end Nav -->

    <div class="bg-white p-3">
      <div class="row p-2 justify-content-center">
      <div
        class="container col col-md-9 col-lg-6 col-sm-12 col-12  my-3 mx-auto row-cols-12 row  shadow-sm bg-dark-subtle rounded-2 p-3"
      >
        <div class="col col-12 col-md-7  ">
          <h2>Hi Welcome</h2>
          <p style="text-align: justify">
            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Nostrum
            hic delectus rem libero assumenda maiores non natus nihil inventore
            beatae quam ab pariatur voluptate, aliquid eligendi quidem
            necessitatibus vero tenetur ex amet quas. Minus nihil numquam unde
            rem. Facilis explicabo veniam eligendi ipsam cupiditate vel! Maiores
            saepe dolore nesciunt tenetur!
          </p>

          <div class="d-flex gap-3 align-items-center">
            <a href="/contact" class="btn btn-dark">Contact</a>
            <a class="text-black" href="#">download CV
              <i class="fa-solid fa-download"></i></a>
          </div>

          <div class="d-flex justify-content-center gap-2 mt-5 mb-sm-3">
            <a class="text-black" href="https://linkedin.com" target="_blank">
              <i class="fa-brands fa-linkedin fa-2xl"></i>
            </a>
            <a
              class="text-black"
              href="https://instagram.com/taufikhdyt.id"
              target="_blank"
            >
              <i class="fa-brands fa-square-instagram fa-2xl"></i>
            </a>
            <a
              class="text-black"
              href="https://facebook.com/Taufikhdyt25"
              target="_blank"
            >
              <i class="fa-brands fa-square-facebook fa-2xl"></i>
            </a>
            <a class="text-black" href="https://twitter.com" target="_blank">
              <i class="fa-brands fa-square-twitter fa-2xl"></i>
            </a>
          </div>
        </div>

        <div
          class="shadow-sm rounded-bottom-2 text-center mt-5 col col-12 col-md-5  "
        >
          <img
            width="100%"
            class="rounded-top-2"
            src="https://i.imgur.com/eltDXdk.jpg"
            alt="profiles"
          />
          <div class="mt-2">
            <h2>Taufik Hidayat</h2>
            <p>Fullstack Developer</p>
          </div>
        </div>
      </div>
      </div>

    </div>

    <div class="bg-dark-subtle p-4 px-sm-4 px-md-3 px-lg-3">
      <h4 class="text-center fw-semibold">MY PROJECT</h4>
      <div class="mt-5">
        <div id="post" class="gap-3 d-flex flex-wrap">
          {{#each dataProject}}
            <div class="card p-3" style="width: 280px;">
              <div>
                <div>
                  <img
                    class="img-cover w-100 mb-2"
                    style="height: 160px"
                    src="{{this.image}}"
                    alt="image"
                  />
                  <div class="d-flex">
                    <span class="bg-dark-subtle text-black px-2 w-100"><i
                        class="fa-solid fa-user"
                      ></i>
                      author :
                      {{this.author}}</span>
                  </div>
                </div>

                <a
                  target="_blank"
                  class="fw-bolder"
                  href="/project-detail/{{this.id}}"
                >
                  <span
                    style="
                    -webkit-line-clamp: 1;
                    overflow: hidden;
                    display: -webkit-box;
                    -webkit-box-orient: vertical;
                    font-size: large;
                  "
                  >{{this.name}}</span>
                </a>

                <p class="fw-lighter">durasi : {{this.duration}}</p>
                <p
                  style="
                  -webkit-line-clamp: 2;
                  overflow: hidden;
                  display: -webkit-box;
                  -webkit-box-orient: vertical;
                  text-align: justify;

                  height: 50px;
                "
                >
                  {{this.description}}
                </p>
                <div class="d-flex gap-2 my-2">
                  {{#if this.technologies.node_js}}
                    <i class="fa-brands fa-xl fa-node-js"></i>
                  {{/if}}
                  {{#if this.technologies.react_js}}
                    <i class="fa-brands fa-xl fa-react"></i>
                  {{/if}}
                  {{#if this.technologies.php}}
                    <i class="fa-brands fa-xl fa-php"></i>
                  {{/if}}
                  {{#if this.technologies.javascript}}
                    <i class="fa-brands fa-xl fa-js"></i>
                  {{/if}}
                </div>
              </div>
              {{#if this.isLogin}}
                <div class="d-flex gap-2 mt-3">
                  <a
                    href="update-project/{{this.id}}"
                    class="btn btn-danger w-100"
                  >edit</a>
                  <a
                    href="delete-project/{{this.id}}"
                    class="btn btn-danger w-100"
                  >delete</a>
                </div>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>